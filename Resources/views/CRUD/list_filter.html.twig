<div class="panel panel-default">
	<div class="panel-heading">
		<h3 class="panel-title">{% trans %}sfs.admin.crud.filters{% endtrans %}</h3>

		<div class="panel-actions">
			<div class="btn-group btn-group-transparent">
				<a class="btn btn-sm" role="button" data-toggle="collapse" href="#filters" aria-expanded="false" aria-controls="collapse">
					<i class="fa fa-chevron-down"></i>
				</a>
			</div>
		</div>
	</div>
	<div id="filters" class="panel-body collapse {% if filterForm.vars.submitted %}in{% endif %}">
		<form method="get" class="form-horizontal">
			<div class="form-body">
				{% for filter in filterForm %}
                    {% if filter.vars.attr.row_collection is defined and filter.vars.attr.row_collection %}
                        {% for subfilter in filter %}
                            {{ form_widget(subfilter) }}
                        {% endfor %}
                    {% else %}
                        {{ form_row(filter) }}
                    {% endif %}
                {% endfor %}
                {{ form_rest(filterForm) }}
			</div>

		    <div class="form-actions text-right pal">
				<button type="submit" name="submit-filter" class="btn btn-default">
					<i class="fa fa-search"></i>
				</button>

				<a href="{{ admin_url('list') }}" class="btn btn-default">{% trans %}sfs.admin.crud.reset{% endtrans %}</a>
			</div>
		</form>
	</div>
</div>

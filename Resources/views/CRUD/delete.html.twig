{% extends 'SfsAdminBundle:Core:base.html.twig' %}

{% block content %}
	{{ parent() }}

<div class="col-lg-12">
	<h3>{% trans %}sfs.admin.message.delete_title{% endtrans %}</h3>
	<p>{% trans with {'%target%': object} %}sfs.admin.message.delete_message{% endtrans %}</p>

	{{ form_start(form) }}
		{{ form_widget(form.delete) }}
		<a href="{{ admin_url('list') }}" class="btn btn-info">
			<i class="fa fa-list"></i> {% trans %}sfs.admin.action.button.back_list{% endtrans %}
		</a>

		{{ form_end(form) }}
	{{ form_end(form) }}
</div>
{% endblock %}
